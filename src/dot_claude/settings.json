{
  "language": "japanese",
  "env": {
    "CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC": "true",
    "DISABLE_INSTALLATION_CHECKS": "true"
  },
  "permissions": {
    "allow": [
      "Bash(cat:*)",
      "Bash(fd:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(head:*)",
      "Bash(ls:*)",
      "Bash(rg:*)",
      "Bash(tail:*)"
    ],
    "deny": [
      "Bash(gh api:*)",
      "Bash(gh auth:*)",
      "Bash(gh codespace:*)",
      "Bash(gh gpg-key:*)",
      "Bash(gh pr comment:*)",
      "Bash(gh pr create:*)",
      "Bash(gh pr edit:*)",
      "Bash(git push:*)",
      "Bash(sudo:*)"
    ],
    "defaultMode": "acceptEdits"
  },
  "sandbox": {
    "enabled": false
  },
  "statusLine": {
    "type": "command",
    "command": "ccstatusline",
    "padding": 0
  },
  "alwaysThinkingEnabled": false
}
