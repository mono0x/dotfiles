{
  "env": {
    "CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC": "true"
  },
  "permissions": {
    "defaultMode": "acceptEdits",
    "allow": [
      "Bash(ls:*)",
      "Bash(grep:*)",
      "Bash(rg:*)"
    ],
    "deny": [
      "Bash(git push:*)",
      "Bash(sudo:*)",
      "Read(.env.*)"
    ]
  }
}
