# .gitconfig
# vim: foldmethod=marker

# user {{{
[user]
  name = mono
  email = mono@mono0x.net
# }}}

# init {{{
[init]
  defaultBranch = main
# }}}

# aliases {{{
[alias]
  br = branch
  ci = commit
  ch = cherry-pick
  co = checkout
  di = diff --ignore-space-change
  gp = grep -n
  me = merge
  pl = pull
  pr = pull --rebase
  push-f = push --force-with-lease
  rc = rebase --continue
  ro = rebase origin
  ss = stash save
  sp = stash pop
  st = status
  wd = diff --ignore-space-change --word-diff

  branches = branch -a
  remotes = remote -v
  stashes = stash list
  tags = tag

  unstage = reset -q HEAD --
  discard = checkout --
  uncommit = reset --mixed HEAD~
# }}}

# settings {{{
[color]
  branch = auto
  diff = auto
  interactive = auto
  status = auto
  ui = auto
[commit]
  verbose = true
[core]
  autocrlf = false
  pager = delta
  precomposeunicode = true
[interactive]
  diffFilter = delta --color-only
[diff]
  colorMoved = default
  algorithm = histogram
  compactionHeuristic = true
[diff "lockb"]
  textconv = bun
  binary = true
[fetch]
  prune = true
[grep]
  lineNumber = true
[merge]
  conflictstyle = diff3
  ff = false
  mergeoptions = --strategy-option=histogram
[pull]
  ff = only
[push]
  default = simple
[rebase]
  autosquash = true
  autostash = true
# }}}

# instead of {{{
[url "https://github.com/"]
  insteadof = "git@github.com:"
  insteadof = "ssh://git@github.com/"
  insteadof = "git://github.com/"
# }}}

# external commands {{{
[hub]
  protocol = https
[ghq]
  root = ~/src
[delta]
  navigate = true
  light = true
  side-by-side = true
  syntax-theme = "Solarized (light)"
# }}}

# include {{{
[include]
  path = conf.d/platform
  path = conf.d/local
# }}}
