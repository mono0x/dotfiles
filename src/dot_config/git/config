# .gitconfig
# vim: foldmethod=marker

# user {{{
[user]
  name = mono
  email = mono@mono0x.net
# }}}

# init {{{
[init]
  defaultBranch = main
# }}}

# aliases {{{
[alias]
  br = branch
  ci = commit
  co = checkout
  di = diff --ignore-space-change
  pl = pull
  pr = pull --rebase
  push-f = push --force-with-lease
  st = status
# }}}

# settings {{{
[branch]
  sort = -committerdate
[color]
  branch = auto
  diff = auto
  interactive = auto
  status = auto
  ui = auto
[column]
  ui = auto
[commit]
  verbose = true
[core]
  autocrlf = false
  pager = delta
  precomposeunicode = true
  untrackedCache = true
[interactive]
  diffFilter = delta --color-only
[diff]
  colorMoved = default
  algorithm = histogram
  compactionHeuristic = true
  mnemonicPrefix = true
  renames = true
[fetch]
  prune = true
  pruneTags = true
[grep]
  lineNumber = true
[help]
  autocorrect = prompt
[merge]
  conflictstyle = diff3
  ff = false
  mergeoptions = --strategy-option=histogram
[pull]
  ff = only
[push]
  default = simple
[rebase]
  autoSquash = true
  autoStash = true
  updateRefs = true
[rerere]
  enabled = true
  autoupdate = true
[tag]
  sort = version:refname
# }}}

# instead of {{{
[url "https://github.com/"]
  insteadof = "git@github.com:"
  insteadof = "ssh://git@github.com/"
  insteadof = "git://github.com/"
# }}}

# external commands {{{
[hub]
