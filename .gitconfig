# .gitconfig
# vim: foldmethod=marker

# user {{{
[user]
  name = mono
  email = mono@mono0x.net
# }}}

# aliases {{{
[alias]
  br = branch
  ci = commit -v
  ch = cherry-pick
  co = checkout
  di = diff --ignore-space-change
  gp = grep -n
  me = merge
  pl = pull
  pr = pull --rebase
  push-f = push --force-with-lease
  rc = rebase --continue
  ro = rebase origin
  ss = stash save
  sp = stash pop
  st = status
  wd = diff --ignore-space-change --word-diff

  branches = branch -a
  remotes = remote -v
  stashes = stash list
  tags = tag

  unstage = reset -q HEAD --
  discard = checkout --
  uncommit = reset --mixed HEAD~
# }}}

# settings {{{
[color]
  branch = auto
  diff = auto
  interactive = auto
  status = auto
  ui = auto
[core]
  excludesfile = ~/.gitignore
  autocrlf = false
  pager = LESS=-R less
  precomposeunicode = true
[diff]
  algorithm = histogram
  compactionHeuristic = true
[fetch]
  prune = true
[grep]
  lineNumber = true
[merge]
  ff = false
  mergeoptions = --strategy-option=histogram
[pull]
  ff = only
[push]
  default = simple
[rebase]
  autosquash = true
  autostash = true
# }}}

# instead of {{{
[url "git@github.com:"]
  insteadof = "git://github.com/"
  insteadof = "https://github.com/"
[url "git@bitbucket.org:"]
  insteadof = "git://bitbucket.org/"
  insteadof = "https://bitbucket.org/"
# }}}

# external commands {{{
[hub]
  protocol = https
[ghq]
  root = ~/src
# }}}

# include {{{
[include]
  path = .gitconfig.platform
  path = .gitconfig.local
# }}}
