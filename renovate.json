{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "schedule": [
    "monthly"
  ],
  "minimumReleaseAge": "3 days",
  "packageRules": [
    {
      "description": "Group GitHub Actions (minor and patch)",
      "matchManagers": ["github-actions"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "actions"
    }
  ]
}
