{{ $refreshPeriod := "168h" -}}

{{ $gitDefaultBranch := "git-default-branch-aarch64-apple-darwin" -}}

{{ if ne $gitDefaultBranch "" -}}
["bin/git-default-branch"]
type = "file"
url = "https://github.com/mono0x/git-default-branch/releases/latest/download/{{ $gitDefaultBranch }}"
executable = true
refreshPeriod = "{{ $refreshPeriod }}"
{{ end -}}

{{ $goss := "goss-darwin-arm64" -}}

{{ if ne $goss "" -}}
["bin/goss"]
type = "file"
url = "https://github.com/goss-org/goss/releases/latest/download/{{ $goss }}"
executable = true
refreshPeriod = "{{ $refreshPeriod }}"
{{ end -}}

{{ $nvim := ".config/nvim" -}}

["{{ $nvim }}/pack/vendor/start/copilot.vim"]
type = "git-repo"
url = "https://github.com/github/copilot.vim"
refreshPeriod = "{{ $refreshPeriod }}"
