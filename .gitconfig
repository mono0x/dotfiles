[user]
  name = mono
  email = mono@monoweb.info
[color]
  branch = auto
  diff = auto
  interactive = auto
  status = auto
  ui = auto
[core]
  editor = vim
  excludesfile = ~/.gitignore
  autocrlf = false
[alias]
  br = branch
  ci = commit -v
  co = checkout
  di = diff
  wd = diff --word-diff
  st = status
  pr = pull --rebase
  gp = grep -n
  fo = fetch origin
  ro = rebase origin
  rc = rebase --continue
