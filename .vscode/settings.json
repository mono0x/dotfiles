{
  "deno.enable": true,
  "deno.importMap": "deno.jsonc",
  "deno.lint": true,
  "files.associations": {
    "**/src/dot_config/git/conf.d/*.*": "ini",
    "**/src/dot_config/git/config": "ini",
    "**/src/dot_config/git/ignore": "ignore",
    "*.toml.tmpl": "toml",
    "*.zsh.tmpl": "shellscript",
    "dot_zprofile": "shellscript",
    "dot_zshenv": "shellscript",
    "dot_zshrc.tmpl": "shellscript"
  },
  "[json][jsonc][typescript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "denoland.vscode-deno"
  },
  "files.exclude": {
    "third_party": true
  },
  "yaml.schemas": {
    // https://github.com/github/vscode-github-actions/issues/195#issuecomment-1570218818
    "https://json.schemastore.org/github-workflow.json": [
      "*.github/workflows/*.yaml",
      "*.github/workflows/*.yml"
    ],
    "https://json.schemastore.org/github-action.json": [
      "action.yaml",
      "action.yml"
    ],
    "https://raw.githubusercontent.com/goss-org/goss/master/docs/schema.yaml": [
      "goss.yaml",
      "test/goss/*.yaml"
    ]
  }
}
