{
  "env": {
    "CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC": "true"
  },
  "permissions": {
    "allow": [
      "Bash(cat:*)",
      "Bash(fd:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(head:*)",
      "Bash(ls:*)",
      "Bash(rg:*)",
      "Bash(tail:*)"
    ],
    "deny": [
      "Bash(git push:*)",
      "Bash(sudo:*)"
    ],
    "defaultMode": "acceptEdits"
  },
  "sandbox": {
    "enabled": true
  },
  "alwaysThinkingEnabled": false
}
