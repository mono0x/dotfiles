# .gitconfig
# vim: foldmethod=marker

# user {{{
[user]
  name = mono
  email = mono0x@users.noreply.github.com
# }}}

# aliases {{{
[alias]
  br = branch
  ci = commit -v
  co = checkout
  di = diff --ignore-space-change
  fo = fetch origin
  gp = grep -n
  me = merge
  pl = pull
  pr = pull --rebase
  rc = rebase --continue
  ro = rebase origin
  ss = stash save
  sp = stash pop
  st = status
  wd = diff --ignore-space-change --word-diff

  mergetest = !git-mergetest
# }}}

# settings {{{
[color]
  branch = auto
  diff = auto
  interactive = auto
  status = auto
  ui = auto
[core]
  excludesfile = ~/.gitignore
  autocrlf = false
  pager = LESS=-R less
[diff]
  algorithm = histogram
[fetch]
  prune = true
[grep]
  lineNumber = true
[merge]
  ff = false
  mergeoptions = --strategy-option=histogram
[pull]
  ff = only
[push]
  default = simple
[rebase]
  autosquash = true
  autostash = true
# }}}

# instead of {{{
[url "git@github.com:"]
  pushinsteadof = "git://github.com/"
  pushinsteadof = "https://github.com/"
[url "git@bitbucket.org:"]
  pushinsteadof = "git://bitbucket.org/"
  pushinsteadof = "https://bitbucket.org/"
# }}}

# external commands {{{
[hub]
  protocol = https
[ghq]
  root = ~/src
# }}}

# include {{{
[include]
  path = .gitconfig.platform
  path = .gitconfig.local
# }}}
