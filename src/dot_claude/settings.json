{
  "language": "japanese",
  "env": {
    "CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC": "true",
    "DISABLE_INSTALLATION_CHECKS": "true"
  },
  "model": "opusplan",
  "permissions": {
    "allow": [
      "Bash(cat:*)",
      "Bash(fd:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(head:*)",
      "Bash(ls:*)",
      "Bash(pnpm audit:*)",
      "Bash(pnpm cat-file:*)",
      "Bash(pnpm cat-index:*)",
      "Bash(pnpm doctorlist:*)",
      "Bash(pnpm licenses:*)",
      "Bash(pnpm list:*)",
      "Bash(pnpm outdated:*)",
      "Bash(pnpm view:*)",
      "Bash(pnpm why:*)",
      "Bash(rg:*)",
      "Bash(tail:*)",
      "WebSearch(*)"
    ],
    "deny": [
      "Bash(gh api:*)",
      "Bash(gh auth:*)",
      "Bash(gh codespace:*)",
      "Bash(gh gpg-key:*)",
      "Bash(gh pr comment:*)",
      "Bash(gh pr create:*)",
      "Bash(gh pr edit:*)",
      "Bash(git push:*)",
      "Bash(sudo:*)"
    ],
    "defaultMode": "acceptEdits"
  },
  "plansDirectory": "./.claude/plans",
  "sandbox": {
    "enabled": true,
    "excludedCommands": [
      "./gradlew:*",
      "pnpm:*"
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "ccstatusline",
    "padding": 0
  },
  "alwaysThinkingEnabled": false
}
